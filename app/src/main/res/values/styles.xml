<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--- Customize popmenu -->
        <item name="android:dropDownListViewStyle">@style/PopupMenu</item>
    </style>
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">5dp</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:divider">@color/colorPrimaryDark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="ProgressDialogCustom" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
    </style>
</resources>
